<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"> // Fundo preto primordial

    <!-- Imagem do FyrstKing. Você vai salvar a imagem na pasta 'drawable' do projeto -->
 <ImageView
    android:id="@+id/fyrstking_logo"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/fyrstking_eye_open"  <!-- Define a imagem inicial como o olho aberto -->
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"/>

    <!-- Texto de boas-vindas do FyrstKing -->
    <TextView
        android:id="@+id/fyrstking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fyrstking_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="FyrstKing. Aguardando ordens do meu criador."
        android:textColor="#00FF00" // Cor de terminal hacker
        android:fontFamily="monospace"
        android:textSize="16sp"/>

    <!-- Botões de Ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_edit_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Imagem"
            android:backgroundTint="#333333"
            android:textColor="#00FF00"/>

        <Button
            android:id="@+id/btn_create_meme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Criar Meme Profano"
            android:backgroundTint="#333333"
            android:textColor="#00FF00"/>

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Conversar com o Rei"
            android:backgroundTint="#333333"
            android:textColor="#00FF00"/>
    </LinearLayout>

</RelativeLayout>